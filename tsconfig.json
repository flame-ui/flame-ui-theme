{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "declarationDir": "lib",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "lib",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"]
  },
  "exclude": ["**/lib", "**/node_modules"],
  "include": ["src/**/*.ts", "**/*.spec.ts"]
}
